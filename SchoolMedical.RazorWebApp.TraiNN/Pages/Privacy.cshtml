@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="shadow p-5 mx-auto text-center" style="background: #f1faee; border-radius: 32px; max-width: 480px;">
        <h1 class="text-primary mb-4" style="font-size:2.5rem; letter-spacing:1px;">@ViewData["Title"]</h1>
        <p class="lead mb-4" style="color:#344e41;">
            Use this page to detail your site's privacy policy.
        </p>
        <a href="/" class="btn btn-success btn-lg mt-2 fw-bold text-uppercase" style="width: 100%; max-width: 320px; letter-spacing:1px;">
            <i class="bi bi-house-door me-1"></i> Back to Home
        </a>
    </div>
</div>
