<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolMedical</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/SchoolMedical.RazorWebApp.TraiNN.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand .brand-sub {
            color: #43aa8b !important; /* Xanh lá tươi, đồng bộ style.css */
            font-weight: 600;
            letter-spacing: 1px;
            font-size: 1.1rem;
        }
        .navbar-nav .nav-link.active {
            background: #b7e4c7 !important;
            color: #344e41 !important;
            border-radius: 18px;
            font-weight: bold;
            box-shadow: 0 2px 8px #b7e4c733;
        }
        .navbar-nav .nav-link {
            transition: background 0.2s, color 0.2s;
            border-radius: 18px;
            margin-right: 0.5rem;
            padding-left: 1rem;
            padding-right: 1rem;
        }
        .navbar-nav .nav-link:hover {
            background: #d8f3dc !important;
            color: #344e41 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    SchoolMedical <span class="brand-sub">.RazorWebApp.TraiNN</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.ToLower().Contains("/medicationtrainns") == true ? "active" : "")" href="/MedicationTraiNns/Index">Medication</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/Privacy" ? "active" : "")" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <div class="user-info text-nowrap">
                        <span class="text-muted">Welcome,</span>
                        <strong>@Context.Request.Cookies["UserName"]</strong>
                        <a class="btn btn-success btn-sm ms-2 fw-bold text-uppercase btn-signout" style="letter-spacing:1px;" href="/MedicationTraiNNs/Logout">
                            <i class="bi bi-box-arrow-right me-1"></i> Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 mt-auto text-muted" style="background:#f1faee;">
        <div class="container text-center small">
            &copy; 2025 - SchoolMedical.RazorWebApp.TraiNN - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
