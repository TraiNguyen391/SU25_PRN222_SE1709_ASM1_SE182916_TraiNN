<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolMedical</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolMedical.RazorWebApp.TraiNN.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand span {
            font-size: 0.9rem;
            color: #6c757d;
        }

        footer {
            background-color: #ffffff;
            box-shadow: 0 -1px 4px rgba(0, 0, 0, 0.05);
        }

        .nav-link.active {
            font-weight: bold;
            color: #0d6efd !important;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-info strong {
                color: #0d6efd;
            }

        .navbar-nav .nav-item + .nav-item {
            margin-left: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    SchoolMedical <span class="text-muted">.RazorWebApp.TraiNN</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.Contains("MedicationTraiNns") == true ? "active" : "")" asp-page="/MedicationTraiNns/Index">Medication</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/Privacy" ? "active" : "")" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <div class="user-info text-nowrap">
                        <span class="text-muted">Welcome,</span>
                        <strong>@Context.Request.Cookies["UserName"]</strong>
                        <a class="btn btn-outline-danger btn-sm ms-2" href="/Account/Logout">
                            <i class="bi bi-box-arrow-right"></i> Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 mt-auto text-muted">
        <div class="container text-center small">
            &copy; 2025 - SchoolMedical.RazorWebApp.TraiNN - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
